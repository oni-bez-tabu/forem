<%= form_with(model: talk, url: '/talks/create', class: 'talk-form') do |f| %>
  <div class="crayons-field">
    <%= f.label :title, class: "crayons-field__label" do %>
      Nazwa pokoju
      <span class="crayons-field__required crayons-hover-tooltip" data-tooltip="Pole wymagane">*</span>
    <% end %>
    <%= f.text_field :title, class: "crayons-textfield", required: true, placeholder: "Wprowadź nazwę pokoju" %>
  </div>
  
  <div class="crayons-field mt-3">
    <div>
      <%= f.check_box :video, class: "crayons-checkbox" %>
      <%= f.label :video, 'Spotkanie z obrazem (hości będą mieli możliwość włączenia kamery)', class: "crayons-field__label fw-normal" %>
    </div>
  </div>

  <div class="crayons-field mt-3">
    <div>
      <%= check_box_tag :future_meeting, '1', false, class: 'crayons-checkbox future-meeting-checkbox' %>
      <%= label_tag :future_meeting, 'W przyszłości, zaplanuj pokój na określoną datę', class: "crayons-field__label fw-normal" %>
    </div>
  </div>
  
  <div class="crayons-field start-date-field mt-2" style="display: none;">
    <%= f.label :start_date, class: "crayons-field__label" do %>
      Data rozpoczęcia
    <% end %>
    <%= f.datetime_local_field :start_date, class: "crayons-textfield" %>
  </div>

  <p class="mt-2">Tworząc pokój pamiętaj o przestrzeganiu regulaminu. Pamiętaj ze spotkanie maksymalnie może trwać 2h.</p> 

  <div class="actions mt-4">
    <%= f.submit "Zaczynamy!", class: "crayons-btn crayons-btn--l w-100" %>
  </div>
<% end %> 