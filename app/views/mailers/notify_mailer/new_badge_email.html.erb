<center>
  <p>
    Gratulacje, <%= @user.name %>! Otrzymałeś odznakę <b><%= @badge.title %></b>!
  </p>
  <p style="text-align:center;padding:20px 0px">
    <img src="<%= @badge.badge_image_url %>" style="height:200px" alt="Odznaka <%= @badge.title %>" loading="lazy" />
  </p>

  <% if @badge_achievement.include_default_description %>
    <p>
      <%= @badge.description %>
    </p>
  <% end %>

  <% if @badge_achievement.rewarding_context_message.present? %>
    <p>
      <em>
        <%= @badge_achievement.rewarding_context_message.html_safe %>
      </em>
    </p>
    <br />
  <% end %>

  <p>
    <a
      href="<%= user_url(@user) %>"
      style="font-weight:bold;color:white;background:#4e57ef;padding: 12px 15px;border-radius:6px;text-decoration:none">
      Sprawdź swój profil
    </a>
  </p>

  <% if @badge.credits_awarded > 0 && Listing.feature_enabled? %>
    <hr style="opacity:0.4;width: 150px;margin: 30px auto;" />
    <p>
      Otrzymujesz również <strong><a href="<%= credits_url %>"><%= @badge.credits_awarded %> nowych kredytów</a></strong> do wykorzystania na <strong><a href="<%= listings_url %>">listach społeczności</a></strong><br />
      jeśli masz coś, co chciałbyś promować. 🎉
    </p>
    <p>
      <strong><a href="<%= app_url(about_listings_url) %>">Więcej informacji o listach<a></strong>
    </p>
  <% end %>
</center>
